<div id="banner">
  <h1>Sign Up</h1>
</div>

<%= error_messages_for @user %>


<%= form_for @user do |f| %>
<fieldset>
  <div class="required">
    <p>
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'large textbox', :size => 30 %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email, :class => 'large textbox', :size => 30 %>
      <span class="hint">It's also your login id.</span>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'large textbox', :size => 30 %>
      <span class="hint">Hard to guess, but easy to remember.</span>
    </p>
    <p>
      <%= f.label :password_confirmation, "And again..." %>
      <%= f.password_field :password_confirmation, 
                           :class => 'large textbox', :size => 30 %>
      <span class="hint">Think of it as a typing test.</span>
    </p>
  </div>  
  <p class="actions">
    <%= f.submit "Sign Up!" %> or <%= link_to 'cancel', events_path %>
  </p>
</fieldset>
<% end %>
