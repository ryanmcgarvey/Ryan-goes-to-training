<h1>Comments</h1>
<% @comments.each do |comment| %>
  <p class="comment">
    <%= comment.content %>
  </p>
<% end %>

<h2>New Comment</h2>
<%= form_for [@commentable, Comment.new] do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
