<div id="banner">
  <h1>Your Events</h1>
</div>

<table class="records no-heading" cellpadding="0" cellspacing="0">
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Date</th>
  </tr>
  <% for event in @events %>
    <tr class="<%= cycle("", "alt") %>">
      <td><%= event.name %></td>
      <td><%= event.location %></td>
      <td><%= event.starts_at.to_s(:event_time) %></td>
    </tr>
  <% end %>
</table>