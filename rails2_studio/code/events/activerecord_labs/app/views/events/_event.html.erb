<div class="event" id="event_<%= event.id %>">
  <h2><%= link_to event.name, event %></h2>
  <img class="event" alt="Event" src="<%= event.image_location %>"/>
  <p>
    <%= truncate(event.description, :length => 250) %>
  </p>
  <br/>
  <table class="event" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <th><%= image_tag("/images/icons/date.png") %> When?</th>
      <td><%= event.starts_at.to_s(:event_time) %></td>
    </tr>
    <tr>
      <th><%= image_tag("/images/icons/map.png") %> Where?</th>
      <td><%= event.location %></td>
    </tr>
    <tr>
      <th><%= image_tag("/images/icons/dollar.png") %> Cost?</th>
      <td><%= price(event) %></td>
    </tr>
    <tr>
      <th><%= image_tag("/images/icons/group.png") %> Capacity?</th>
      <td>
        <%= pluralize(event.capacity, 'person') %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= button_to "Register!", event_registrations_path(event) %>
      </td>
    </tr>
  </table> 
</div>                                              